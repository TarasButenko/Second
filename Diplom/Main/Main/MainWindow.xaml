<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox  Grid.Row="0" Name="TextBoxRequest" Height="30" Width="350"/>
        <TextBlock Grid.Row="1" Name="TextBlockAnswer" Text="" Height="100" Margin="0,4,0,2"/>
        <Button  Grid.Row="2" Width="100" Height="50" Click="ButtonStartClick"/>
    </Grid>
</Window>
